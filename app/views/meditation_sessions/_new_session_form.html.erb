<%= form_for @meditation_session do |f| %>

    
    <%= f.radio_button :time_spent, "5" %>
    <%= f.label :time_spent_5, "5 Minutes", class: "meditation-duration" %>
    
    <%= f.radio_button :time_spent, "10" %>
    <%= f.label :time_spent_10, "10 Minutes", class: "meditation-duration" %>
   
    <%= f.radio_button :time_spent, "30" %>
    <%= f.label :time_spent_30, "30 Minutes", class: "meditation-duration" %>

    <%= f.submit "Begin" %>

<% end %>
